<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CrearCuenta"
    >

    <ImageView
        android:src="@drawable/flecha_retroceder"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="40dp"
        android:orientation="vertical" >

        <ImageView
            android:src="@drawable/fondo_usuario2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            />


        <EditText
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email: mail@email.com"
            android:textSize="12sp"
            />

        <EditText
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone: +99 999 555 222"
            android:textSize="12sp"
            />

        <EditText
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:textSize="12sp"
            />

        <EditText
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar Contraseña"
            android:textSize="12sp"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="75dp"
            android:textSize="12sp"
            android:textColor="@color/whiteish"
            android:layout_gravity="center"
            android:text="@string/next"
            android:background="@drawable/round_button"
            />

        <LinearLayout
            android:layout_marginTop="75dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/twitter" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/facebook_" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/gmail_" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Con tus redes sociales"
            android:layout_marginTop="10dp"
            android:textColor="@color/grayish"
            android:gravity="center"
            android:textSize="10sp"
            />

    </LinearLayout>



</LinearLayout>