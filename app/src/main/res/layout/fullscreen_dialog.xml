<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/nombre_articulo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="20dp"
        android:hint="@string/nombre_articulo"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/my_border"
        android:padding="8dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/titulo_articulo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="20dp"
        android:hint="@string/titulo"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/my_border"
        android:padding="8dp"
        android:inputType="text" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/titleSize"
            android:layout_alignParentLeft="true"
            android:text="Texto" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/subir_un_archivo"
            android:drawableLeft="@drawable/subir_un_archivo"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/Greenish"
            android:textAllCaps="false"
            android:gravity="bottom"
            style="?android:attr/borderlessButtonStyle"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/field_texto"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="8dp"
        android:hint="Escribir algo..."
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/my_border"
        android:padding="8dp"
        android:gravity="top"
        android:inputType="text" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="48dp"
        android:gravity="center_horizontal"
        android:background="@color/whiteish"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/picture_set2"
            android:src="@drawable/icono_" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:contentDescription="@string/submit"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/camera_icon"
            style="?android:attr/borderlessButtonStyle" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <EditText
        android:id="@+id/titulo_articulo2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="20dp"
        android:hint="@string/titulo"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/my_border"
        android:padding="8dp"
        android:inputType="text" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/titleSize"
            android:layout_alignParentLeft="true"
            android:text="Texto" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/subir_un_archivo"
            android:drawableLeft="@drawable/subir_un_archivo"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/Greenish"
            android:textAllCaps="false"
            android:gravity="bottom"
            style="?android:attr/borderlessButtonStyle"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/field_texto2"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="8dp"
        android:hint="Escribir algo..."
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/my_border"
        android:padding="8dp"
        android:gravity="top"
        android:inputType="text" />

</LinearLayout>