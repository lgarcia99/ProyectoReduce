<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <EditText
            android:id="@+id/nombre_articulo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/my_border"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/nombre_articulo"
            android:inputType="text"
            android:padding="8dp" />

        <EditText
            android:id="@+id/titulo_articulo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/my_border"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/titulo"
            android:inputType="text"
            android:padding="8dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Texto"
                android:textSize="@dimen/titleSize" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/subir_un_archivo"
                android:fontFamily="sans-serif-condensed"
                android:gravity="bottom"
                android:text="@string/subir_un_archivo"
                android:textAllCaps="false"
                android:textColor="@color/Greenish" />
        </RelativeLayout>

        <EditText
            android:id="@+id/field_texto"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/my_border"
            android:fontFamily="sans-serif-condensed"
            android:gravity="top"
            android:hint="Escribir algo..."
            android:inputType="text"
            android:padding="8dp" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="20dp"
            android:background="@color/whiteish"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picture_set2"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/icono_" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/camera"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                android:contentDescription="@string/submit"
                app:srcCompat="@drawable/camera_icon" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <EditText
            android:id="@+id/titulo_articulo2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/my_border"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/titulo"
            android:inputType="text"
            android:padding="8dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Texto"
                android:textSize="@dimen/titleSize" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/subir_un_archivo"
                android:fontFamily="sans-serif-condensed"
                android:gravity="bottom"
                android:text="@string/subir_un_archivo"
                android:textAllCaps="false"
                android:textColor="@color/Greenish" />
        </RelativeLayout>

        <EditText
            android:id="@+id/field_texto2"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/my_border"
            android:fontFamily="sans-serif-condensed"
            android:gravity="top"
            android:hint="Escribir algo..."
            android:inputType="text"
            android:padding="8dp" />
    </ScrollView>

</LinearLayout>